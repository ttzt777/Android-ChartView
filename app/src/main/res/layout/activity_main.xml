<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <cc.bear3.util.chartview.circle.CircleChartView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="120dp"
        app:ccv_dot_margin="2dp"
        app:ccv_dot_radius_in="3dp"
        app:ccv_dot_radius_out="5dp"
        app:ccv_dot_out_alpha="0.25"
        app:ccv_line_turn_margin="11dp"
        app:ccv_line_width="0.5dp"
        app:ccv_value_size="14sp"
        app:ccv_value_color="#333333"
        app:ccv_value_margin_start="8dp"
        app:ccv_value_margin_bottom="1dp"
        app:ccv_unit_size="12sp"
        app:ccv_unit_color="#666666"
        app:ccv_unit_margin="4dp"
        app:ccv_explain_size="11sp"
        app:ccv_explain_color="#666666"
        app:ccv_explain_margin="2dp"
        android:background="#FFFFFF"  />

    <cc.bear3.util.chartview.doughnut.DoughnutView
        android:id="@+id/doughnut"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_height="160dp" />

</LinearLayout>